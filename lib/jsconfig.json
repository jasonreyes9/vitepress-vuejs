{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "checkJs": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "paths": {
      "/@app/*": ["app/*"],
      "/@theme/*": ["theme-default/*"],
      "vitepress": ["app/exports.js"]
    }
  },
  "include": ["."]
}
